<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/macro_predictor_title"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="220dp"
        android:text="@string/app_title" />

    <TextView
        android:id="@+id/functionality_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="275dp"
        android:text="@string/functionality_description" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="320dp" />

    <EditText
        android:id="@+id/input_recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="360dp"
        android:hint="Enter Recipe Name"
        android:autofillHints=""
        android:inputType="text" />

    <Button
        android:id="@+id/get_macros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="230dp"
        android:layout_marginTop="400dp"
        android:text="See Macro's ->"
        android:layout_centerInParent="true"/>


    <Button
        android:id="@+id/enter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="400dp"
        android:text="Customize Ingredients"
        android:layout_centerInParent="true"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enter_button"/>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="440dp"
        android:src="@drawable/food_in_paper_bag" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="489dp"
        android:layout_height="275dp"
        android:layout_marginStart="-40dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/foods_as_border" />

</FrameLayout>